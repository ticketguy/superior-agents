# VaultGuard Security Agent Configuration
# ========================================

# AI Model API Keys (Choose at least one)
# ----------------------------------------
# Anthropic Claude (Recommended for security analysis)
ANTHROPIC_API_KEY=

# OpenAI (Required for embeddings, optional for analysis)
OPENAI_API_KEY=

# OpenRouter (Access to multiple models)
OPENROUTER_API_KEY=

# Deepseek (Alternative AI model)
DEEPSEEK_DEEPSEEK_API_KEY=

# Solana Blockchain Configuration
# --------------------------------
# Primary RPC URL (use your preferred provider)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Helius API (Premium Solana RPC)
HELIUS_API_KEY=

# QuickNode API (Premium Solana RPC) 
QUICKNODE_API_KEY=

# Social Media APIs (for community threat intelligence)
# ----------------------------------------------------
# Twitter API (for threat monitoring)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_BEARER_TOKEN=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=

# Reddit API (for community intelligence)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=

# External Data APIs
# ------------------
# CoinGecko (market data and token info)
COINGECKO_API_KEY=

# Jupiter (Solana DEX aggregator)
JUPITER_API_KEY=

# Service Configuration
# ---------------------
# RAG API URL (vector database service)
RAG_SERVICE_URL=http://localhost:8080

# Security Agent API port
SECURITY_API_PORT=8001

# Database Configuration
# ----------------------
# SQLite database path
SQLITE_PATH=./db/vaultguard.db

# Background Intelligence Configuration
# ------------------------------------
# Enable background threat monitoring
ENABLE_BACKGROUND_MONITOR=true

# Enable edge learning engine
ENABLE_EDGE_LEARNING=true

# Social media monitoring intervals (minutes)
TWITTER_SCRAPING_INTERVAL=60
REDDIT_SCRAPING_INTERVAL=60

# Threat monitoring configuration
PRICE_CHANGE_THRESHOLD=5.0
LOG_LEVEL=INFO

# Monitoring intervals (seconds)
MONITOR_INTERVAL=600
SOCIAL_INTERVAL=7200
WALLET_INTERVAL=1800
THREAT_UPDATE_INTERVAL=10800
CACHE_UPDATE_INTERVAL=300

# Security Agent Configuration
# ----------------------------
# Agent name identifier
SECURITY_AGENT_NAME=vaultguard_production

# AI model selection (claude, openai, openrouter, deepseek)
SECURITY_AI_MODEL=claude

# Jupiter API integration
JUPITER_API_ENABLED=true

# Development/Testing Configuration
# ---------------------------------
# Set to 'development' for testing, 'production' for live use
NODE_ENV=production

# Enable debug logging (true/false)
DEBUG_MODE=false

# Test mode (reduces API calls, uses mock data when possible)
TEST_MODE=false