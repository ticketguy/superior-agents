# VaultGuard RAG API Configuration
# =================================

# OpenAI Configuration (Required)
# --------------------------------
# OpenAI API key for vector embeddings
OPENAI_API_KEY=

# API Server Configuration
# ------------------------
# Port for RAG API service
PORT=8080

# Environment (development/production)
NODE_ENV=production

# Database Configuration
# ----------------------
# Path to vector database storage
PKL_PATH=./pkl/

# Database backup location
DB_BACKUP_PATH=./db/

# Vector Database Configuration
# -----------------------------
# Embedding model for vector generation
EMBEDDING_MODEL=text-embedding-3-small

# Embedding dimensions
EMBEDDING_DIMENSIONS=1536

# Vector search configuration
DEFAULT_TOP_K=10
SIMILARITY_THRESHOLD=0.7

# Performance Configuration
# -------------------------
# Request timeout (seconds)
REQUEST_TIMEOUT=120

# Max concurrent requests
MAX_CONCURRENT_REQUESTS=10

# Cache size for embeddings
EMBEDDING_CACHE_SIZE=1000

# Logging Configuration
# ---------------------
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# Security Configuration
# ----------------------
# Enable CORS (for browser access)
ENABLE_CORS=true

# Allowed origins (comma separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8001

# API key for service authentication (optional)
API_KEY=

# Advanced Configuration
# ----------------------
# Vector database cleanup interval (hours)
CLEANUP_INTERVAL=24

# Maximum vector database size (MB)
MAX_DB_SIZE=1000

# Enable automatic backups
ENABLE_BACKUPS=true

# Backup retention (days)
BACKUP_RETENTION_DAYS=7